---
import { Image } from "astro:assets";

interface Props {
  imageUrl: string;
  alt: string;
  width: number;
  class?: string;
}

const { imageUrl, alt, width, ...rest } = Astro.props;

// workaround to dynamically import local images
const images = import.meta.glob("../assets/images/*");
const image: any = images[imageUrl]();
---

<Image src={image} alt={alt} width={width} {...rest} />
