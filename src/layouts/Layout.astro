---
import "../styles/fonts.css";
import "../styles/global.css";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header class="pb-10 pt-5">
      <div class="wrapper flex gap-10">
        <div class="flex-none text-3xl font-normal logo">
          <a href="/">Daniel Milenkovic</a>
        </div>

        <div class="flex-auto"></div>

        <nav class="flex-none">
          <ul class="flex text-lg tracking-wide gap-10">
            <li>
              <a href="/">Gallery</a>
            </li>
            <li>
              <a href="/">Shop</a>
            </li>

            <li>
              <a href="/about">About</a>
            </li>
          </ul>
        </nav>
      </div>
    </header>

    <main class="pb-20">
      <div class="wrapper">
        <slot />
      </div>
    </main>

    <footer class="pt-10 pb-10">
      <div class="wrapper">
        <div
          class="border-stone-600 border-solid border-t-2 pt-2 grid grid-flow-col"
        >
          <div>Â© {new Date().getFullYear()} Daniel Milenkovic</div>
          <div class="text-right">
            <a href="https://instagram.com/danielmilenkovic.art" target="_blank"
              >Instagram</a
            >
            <a
              href="https://https://danielmilenkovic.substack.com/"
              target="_blank">Substack</a
            >
          </div>
        </div>
      </div>
    </footer>

    <style>
      header {
        font-family: "supplymono", monospace;
      }
      nav {
        line-height: 1.5;
        text-align: right;
      }

      nav ul li::after {
        font-weight: normal;
        padding-left: 10px;
        padding-right: 10px;
        color: rgb(var(--accent));
      }

      .logo {
        width: 200px;
        word-wrap: break-word;
      }
      .logo:hover {
        color: rgb(var(--accent));
      }

      nav ul li:last-child::after {
        content: "";
      }

      footer {
        font-family: "supplymono", monospace;
      }

      footer h2 {
        font-weight: 400;
        font-size: 2rem;
      }
    </style>
  </body>
</html>
