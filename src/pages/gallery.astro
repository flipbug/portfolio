---
import Layout from "../layouts/Layout.astro";
import { getCollection, type CollectionEntry } from "astro:content";
import GalleryComponent from "../components/Gallery.astro";

const posts: CollectionEntry<"gallery">[] = await getCollection("gallery");
const sortedPosts = posts.sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Gallery - Daniel Milenkovic">
    <GalleryComponent posts={sortedPosts} />
</Layout>
